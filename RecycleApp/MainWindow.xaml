<Window x:Class="RecycleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecycleApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="response" Height="150" Width="500" Margin="20"/>
            <TextBox x:Name="deserialize" Height="150" Width="500" Margin="20"/>
            <Button x:Name="getRequest" Content="Отправить запрос" Width="200" Click="getRequest_Click"/>
        </StackPanel>
    </Grid>
</Window>
