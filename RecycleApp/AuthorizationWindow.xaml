<Window x:Class="RecycleApp.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecycleApp"
        mc:Ignorable="d"
        Title="{Binding ElementName=TxtTitle, Path=Text}" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TxtTitle" Text="{Binding ElementName=FrameMain, Path=Content.Title}" HorizontalAlignment="Center" FontSize="25" Width="auto" Style="{StaticResource TextBlockAuthorizationWindow}"/>
        <Frame Name="FrameMain" NavigationUIVisibility="Hidden" Grid.Row="1" Source="/Pages/AuthorizationPage.xaml">

            
        </Frame>
        
        
    </Grid>
</Window>
