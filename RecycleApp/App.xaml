<Application x:Class="RecycleApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RecycleApp"
             StartupUri="AuthorizationWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/StyleDictionaries/MainMenuElementsStyles.xaml"/>
                <ResourceDictionary Source="/StyleDictionaries/EditPageStyles.xaml"/>
                <ResourceDictionary Source="/StyleDictionaries/AuthorizationWindowStyles.xaml"/>
                <ResourceDictionary Source="/StyleDictionaries/CommentPageStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <ImageSource x:Key="DefaultImage">/Images/Mock.png</ImageSource>
        </ResourceDictionary>
    </Application.Resources>
</Application>
